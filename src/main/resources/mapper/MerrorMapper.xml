<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.exam.examservice.mapper.MerrorMapper">

    <sql id="Base_Column_List">
        id,question_id,subject_id,question_name,error_count,answer_count
    </sql>
    <select id="selectPage" resultType="com.exam.examservice.beans.Merror">
        SELECT
        <include refid="Base_Column_List"/>
        FROM m_error WHERE 1=1
        <if test="searchName!=null and searchName!=''">
           AND question_name LIKE  CONCAT(CONCAT('%',#{searchName},'%'))
        </if>
        <if test="subjectId!=null and subjectId!=''">
            AND subject_id=#{subjectId}
        </if>
    </select>

    <insert id="insert" parameterType="com.exam.examservice.beans.Merror">
        insert into m_error (
        id,question_id,subject_id,question_name,error_count,answer_count
        )
        values(
        #{id},#{questionId},#{subjectId},#{questionName},#{errorCount},#{answerCount}
        )
    </insert>

    <select id="selectOne" resultType="com.exam.examservice.beans.Merror">
        SELECT
        <include refid="Base_Column_List"/>
        FROM m_error
        <if test="questionId!=null and questionId!=''">
            WHERE question_id = #{questionId}
        </if>
    </select>

    <update id="updateById" parameterType="com.exam.examservice.beans.Merror">
        update m_error
        <set>
            <if test="questionId!=null">
                question_id=#{questionId},
            </if>
            <if test="subjectId!=null">
                subject_id=#{subjectId},
            </if>
            <if test="questionName!=null">
                question_name=#{questionName},
            </if>
            <if test="errorCount!=null">
                error_count=#{errorCount},
            </if>
            <if test="answerCount!=null">
                answer_count=#{answerCount},
            </if>
        </set>
        where id=#{id}
    </update>

    <delete id="deleteByIds" parameterType="java.lang.String">
        delete from m_error
        where id in
        <foreach collection="array" item="id"  open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>